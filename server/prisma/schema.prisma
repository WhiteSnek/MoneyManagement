generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  fullname String 
  email String @unique
  avatar String?
  password String 
  dob String?
  gender String?
  monthlyIncome Decimal? 
  budget Decimal?
  lists List[]
  items Item[]
  creditDate Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}

model List {
  id String @id @default(uuid())
  title String
  userId String
  user User @relation(fields: [userId], references: [id])
  items Item[]
  @@map("lists")
}

model Item {
  id String @id @default(uuid())
  name String
  specifications String?
  price Decimal @db.Decimal(10, 2)
  link String
  displayImage String
  quantity Int?
  priority Int?  @default(autoincrement())
  isService Boolean
  category String?
  bought Boolean? @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  listId String?
  userId String
  user User @relation(fields: [userId], references: [id])
  list List? @relation(fields: [listId], references: [id])
  @@map("items")
}

model Otp {
  email String @unique
  otp Int
  expiresAt DateTime
}
